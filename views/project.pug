extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

       
        h1= `${project.project_name}`

        
        p= `${project.description}`

      .project-tech-links-box.box
        h6 Technologies
        ul
        each technology in technologies
          li= technology

        p
          a.btn-link(target="_blank" href=`${project.live_link}`) Live Demo
          a.btn-link(target="_blank" href=`${project.github_link}`) GitHub Repo

    .project-img-box.box

      
      img.project-img(src=`${project.image_urls[1]}`, alt=`${project.alt}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
